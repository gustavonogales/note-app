{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@entity/*": [
        "entity/*"
      ],
      "@controller/*": [
        "web/controller/*"
      ],
      "@repository/*": [
        "repository/*"
      ],
      "@service/*": [
        "service/*"
      ],
      "@web/*": [
        "web/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@dto/*": [
        "web/dto/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "./coverage",
    "**/*.js"
  ]
}
